<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ActionDialogViewRoot">
        <item name="android:paddingBottom">42dp</item>
        <item name="android:paddingLeft">50dp</item>
        <item name="android:paddingRight">50dp</item>
        <item name="android:paddingTop">42dp</item>
    </style>

    <style name="ActionDialogViewTitle">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorTextBlack</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ActionDialogViewMessage">
        <item name="android:gravity">center</item>
        <item name="android:lineSpacingMultiplier">1.4</item>
        <item name="android:textColor">@color/colorTextGrey</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ActionDialogViewButton" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorTextGrey</item>
    </style>

    <style name="DialogButton" parent="@style/Widget.AppCompat.Button">
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="DialogButton.Positive">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="DialogButton.Negative">
        <item name="android:textColor">@color/colorTextGrey</item>
    </style>


</resources>
